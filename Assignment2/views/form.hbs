<h1>{{title}}</h1>
<main>
  <form action="/form/results" method="POST">
    <label for="name">Your name</label>
    <input type="text" name="name" class="input" placeholder="Your name" id="name" />
    <label for="email">Your email</label>
    <input type="text" name="email" class="input" placeholder="Your email" id="email" />
    <label for="comments">Any comments?</label>
    <textarea name="comments" id="comments" placeholder="Any comments?" class="input"></textarea>
    <input type="submit" value="Send" class="button">
  </form>
</main>

<style>
  form {
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
  }

  .input {
    padding: 1vh 1vw;
    padding-left: 0;
    width: 435px;
    margin-bottom: 2vh;
    border: none !important;
    box-shadow: none !important;
    border-bottom: solid 1px #dedede !important;
  }

  ::-webkit-input-placeholder {
    position: relative;
  }

  .input::placeholder {
    overflow: visible;
  }

  .input:focus::placeholder {
    opacity: 0;
    transition: all 100ms ease-in-out;
  }

  .input:focus {
    outline: none;
  }

  .button {
    width: max-content;
    border-radius: 3px;
    border: 1px solid gray;
    height: 3vh;
    min-width: 150px;
    cursor: pointer;
    font-weight: bold;
    box-shadow: 0px 1px 4px 0px #000;
    transition: box-shadow 50ms ease-in-out;
  }

  .button:focus {
    box-shadow: 0px 1px 4px -1px #000;
    outline: none;
  }
</style>
